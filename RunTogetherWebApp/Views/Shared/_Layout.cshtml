                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="pages-inner.html">
                                            <span class="h6 mb-0">Logout</span>
                                        </a>
                                    </div>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="Account"
                                       asp-action="Register">Sign up</a>
                                    <span>&nbsp;or&nbsp;</span><a asp-area="" asp-controller="Account"
                                                                  asp-action="Login">Sign in</a>
                                </li>
                            </ul>
                        }

                    </div>
                    <!--end nav collapse-->
                </nav>
            </div>
            <!--end of container-->
        </div>
