@using RunTogetherWebApp.ViewModels
@model RunningClubByStateViewModel


<div class="col-6 col-lg-3">
    <h6>Race Directory</h6>

    @foreach (var val in Model.States)
    {
        <ul class="list-unstyled">
            <li>
                <a asp-controller="Club" asp-action="ListClubsByState" asp-route-state="@val.StateName">Running club in @val.StateName</a>
            </li>
        </ul>
    }
</div>